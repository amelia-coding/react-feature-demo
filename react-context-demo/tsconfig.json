{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      /*路径映射的集合*/
      "@public/*": ["public/*"],
      "@src/*": ["src/*"],
      "@assets/*": ["src/assets/*"],
      "@styles/*": ["src/assets/styles/*"],
      "@common/*": ["src/common/*"],
      "@components/*": ["src/components/*"],
      "@library/*": ["src/library/*"],
      "@routes/*": ["src/routes/*"],
      "@store/*": ["src/store/*"],
      "@server/*": ["src/server/*"],
      "@api/*": ["src/server/api/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["src"]
}
